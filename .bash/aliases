encr() {
    if [ "$#" -ne 2 ]; then
        echo "encr: requires infile and outfile parameters"
    fi

    openssl aes-256-cbc -salt -in "$1"  -out "$2"
}


decr() {
    if [ "$#" -ne 2 ]; then
        echo "decr: requires infile and outfile parameters"
    fi
    openssl aes-256-cbc -d -salt -in "$1" -out "$2"
}


wlogs() {
    LOG_COLOR="green"
    ENVIRONMENT="Prod"  # default
    if [ "$#" -eq 1 ]; then
        LOG_COLOR=$1
    elif [ "$#" -eq 2 ]; then
        LOG_COLOR=$1
        ENVIRONMENT=$2
    fi
    i2cssh -A -g nata -F -Xo="\"StrictHostKeyChecking no\"" -d row --iterm2 -m `ec2 -profile=monolith -tag="Name:$ENVIRONMENT Web" -output=ip` -p $LOG_COLOR --broadcast
}

clogs() {
    LOG_COLOR="pink"
    if [ "$#" -eq 1 ]; then
        LOG_COLOR=$1
    fi
    i2cssh -A -g nata -F -Xo="\"StrictHostKeyChecking no\"" -d row --iterm2 -m `ec2 -profile=monolith -tag="Name:Prod Celery" -output=ip` -p $LOG_COLOR --broadcast
}

llogs() {
  #
  # llogs <env> [<profile name>]
  #
    #set -x
    local PW_ENV=
    local LOG_COLOR="green"

    if [ "$#" -eq 1 ]; then
        PW_ENV=$1 
    elif [ "$#" -eq 2 ]; then
        PW_ENV=$1
        LOG_COLOR=$2
    fi
    i2cssh -A -g devnat -F --rows 2 -d row --iterm2 -m `ec2 -profile=monolith -tag="Name:${PW_ENV} Web" -tag="Name:${PW_ENV} Web" -output=ip` --broadcast -p chalkboard
    i2cssh -A -g devnat -F --rows 2 -d row --iterm2 -m `ec2 -profile=monolith -tag="Name:${PW_ENV} Celery" -tag="Name:${PW_ENV} Celery" -output=ip` --broadcast -p chalkboard
}
